<?xml version="1.0" encoding="utf-8" ?>

<!-- Open Character Record (OCR) -->
<!-- Basic Fantasy Role-Playing Game, 2nd Edition (BFRPG2) -->

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name ="OpenCharacterRecord" type="OCR_RecordType"/>
