        <xs:sequence>
            <xs:element name="Name" type="BFRPG2_Name" minOccurs="1" maxOccurs="1"/>
            <xs:element name="Background" type="BFRPG2_Background" minOccurs="0" maxOccurs="1"/>
            <xs:element name="Race" type="BFRPG2_Races" minOccurs="1" maxOccurs="1"/>
